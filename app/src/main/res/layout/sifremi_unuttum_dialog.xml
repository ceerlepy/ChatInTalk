<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sifremi_unuttum_layout"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_pass_email"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:ems="10"
        android:visibility="gone"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:maxLength="50"
        android:textColor="#000000"
        android:textSize="16sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_pass_phone"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="phone number"
        android:inputType="phone"
        android:lines="1"
        android:maxLength="11"
        android:textColor="#000000"
        android:textSize="16sp" >
    </EditText>

    <EditText
        android:id="@+id/et_otp"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:ems="10"
        android:textAlignment="center"
        android:hint="KOD"
        android:visibility="gone"
        android:inputType="number"
        android:maxLength="6"
        android:numeric="decimal"
        android:lines="1"
        android:textCursorDrawable="@color/common_signin_btn_dark_text_default"
        android:background="@drawable/otpbox"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="32sp" >
    </EditText>

    <Button
        android:id="@+id/otp_send"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="@drawable/loginbuttonbox"
        android:clickable="true"
        android:text="Get OTP"
        android:textAlignment="center"
        android:textColor="@null"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/password_send"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="@drawable/loginbuttonbox"
        android:clickable="true"
        android:visibility="gone"
        android:text="Send"
        android:textAlignment="center"
        android:textColor="@null"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tw_otp_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:ems="10"
        android:lines="2"
        android:text="Cep telefonunuza gelen 6 haneli şifreyi güvenli kod alanına giriniz."
        android:inputType="textMultiLine"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="gone"
        android:clickable="true"
        android:textSize="16sp" >
    </TextView>

</LinearLayout>